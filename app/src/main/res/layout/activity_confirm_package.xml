<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.packaged.ConfirmPackageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Information"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <!-- Main Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center">

            <!-- Product Image -->
            <!--            <FrameLayout-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="150dp"-->
            <!--                android:layout_weight="1"-->
            <!--                android:layout_marginEnd="16dp"-->
            <!--                android:background="#E0E0E0"-->
            <!--                android:padding="8dp"-->
            <!--                android:elevation="4dp">-->

            <!--                &lt;!&ndash; Hình ảnh sản phẩm &ndash;&gt;-->
            <!--                <ImageView-->
            <!--                    android:id="@+id/image"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:layout_gravity="center"-->
            <!--                    android:scaleType="fitCenter"-->
            <!--                    android:background="@drawable/rounded_background"-->
            <!--                    android:adjustViewBounds="true"-->
            <!--                    android:src="@drawable/ic_image" />-->
            <!--            </FrameLayout>-->

            <!-- Form Layout -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Product Barcode -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="25dp"
                        android:layout_gravity="center_vertical"
                        android:text="Product Barcode"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#000" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/barcodeProductPackageEt"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="Please scan the code"
                            android:padding="8dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />
                        <TextView
                            android:id="@+id/productBarcodePackageStatusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Please scan the barcode"
                            android:padding="8dp"
                            android:textSize="16sp"
                            android:textColor="#FF0000"
                            android:layout_marginBottom="16dp" />
                    </LinearLayout>


                </LinearLayout>

                <!-- Product Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Product Name"
                        android:layout_marginStart="25dp"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="#000" />
                    <EditText
                        android:id="@+id/nameProductPackageEt"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="2"
                        android:padding="8dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>
                <!-- Product Quantity -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Product Quantity"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:layout_marginStart="25dp"
                        android:textColor="#000" />
                    <EditText
                        android:id="@+id/quantityProductPackageEt"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="2"
                        android:padding="8dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>
                <!-- Real Product Quantity -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Real Product Quantity"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_marginStart="25dp"
                        android:textColor="#000" />
                    <EditText
                        android:id="@+id/realQuantityProductPackageEt"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="2"
                        android:padding="8dp"
                        android:inputType="number"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>
                <!-- Warehouse Code -->

            </LinearLayout>
        </LinearLayout>

        <!-- Confirm Button -->
        <Button
            android:id="@+id/confirmProductPackageBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/confirm"
            android:textSize="24sp"
            android:background="@drawable/background_btn"
            android:textColor="#000" />
    </LinearLayout>
</ScrollView>