<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="@string/warehouse_info"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/location_old"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="18dp"
        android:padding="18dp"
        android:background="@drawable/background_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/locationOld1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/location"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:layout_marginEnd="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/productCodeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/product_barcode2"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:textColor="@color/grey"/>

            <EditText
                android:id="@+id/productCode1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/code1"
                android:padding="10dp"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/productNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/product_name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:textColor="@color/grey"/>

            <EditText
                android:id="@+id/productName1"
                android:hint="@string/name"
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="170dp"
                android:textColor="@color/grey"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <ImageView
                android:id="@+id/checkedOldImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/check"
                android:layout_marginStart="50dp"
                app:tint="@color/grey"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productQuantityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:text="@string/product_quantity"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/grey"/>

            <EditText
                android:id="@+id/productQuantity1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/quantity2"
                android:padding="10dp"
                android:textColor="@color/grey"/>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/location_new"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="18dp"
        android:padding="18dp"
        android:background="@drawable/background_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_old">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/locationNewCode2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/location"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:layout_marginEnd="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/productCodeNewTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/product_barcode2"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:textColor="@color/grey"/>

            <EditText
                android:id="@+id/productCode2"
                android:hint="@string/code1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/grey"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginEnd="50dp"/>

            <TextView
                android:id="@+id/productNameNewTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/product_name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/productName2"
                android:hint="@string/name"
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="170dp"
                android:textColor="@color/grey"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <ImageView
                android:id="@+id/checkedNewImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/check"
                android:layout_marginStart="50dp"
                app:tint="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productQuantityNewTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:text="@string/product_quantity"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/grey"/>

            <EditText
                android:id="@+id/productQuantity2"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/grey"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/quantity2"
                android:padding="10dp" />


        </LinearLayout>
    </LinearLayout>






