<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@drawable/background_green1"
        android:text="Take product from location"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Left Side -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15sp"
                    android:layout_weight="1"
                    android:text="@string/warehouse"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/warehouseOldEd"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/edit_warehouse"
                    android:padding="5dp"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="@string/floor"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/floorOldEd"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/edit_floor"
                    android:padding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="@string/area"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/areaOldEt"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/edit_area"
                    android:padding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="@string/location"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/locationOld1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/location_code"
                    android:padding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>
            <TextView android:id="@+id/locationBarcodeStatus1Text" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:text="Please scan the barcode"
                android:textSize="14sp" android:textColor="#FF0000" android:layout_marginBottom="16dp"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="@string/product_name"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/productName1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/enter_name"
                    android:padding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="@string/quantity_product"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/productQuantity1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/enter_quantity"
                    android:padding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="@string/product_id"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/productCode1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="@string/product_barcode"
                    android:padding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>
            <TextView
                android:id="@+id/productBarcodeStatus1Text" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:text="Please scan the product barcode"
                android:textSize="14sp" android:textColor="#FF0000" android:layout_marginBottom="16dp" />
        </LinearLayout>

        <!-- Right Side -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15sp"
                    android:layout_weight="1"
                    android:text="@string/warehouse"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/warehouseNew2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/edit_warehouse2"
                    android:padding="10dp"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="@string/floor"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/floorNew2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/edit_floor2"
                    android:padding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="@string/area"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/areaNew2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/edit_area2"
                    android:padding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="@string/location"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/locationNewCode2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/location_code"
                    android:padding="10dp" android:focusable="false"
                    android:focusableInTouchMode="false" />
            </LinearLayout>

            <TextView android:id="@+id/locationBarcodeStatus2Text" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:text="Please scan the barcode"
                android:textSize="14sp" android:textColor="#FF0000" android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="@string/product_name"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/productName2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/enter_name"
                    android:padding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="@string/quantity_product"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/productQuantity2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/enter_quantity"
                    android:padding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="@string/product_id"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/productCode2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="@string/product_barcode"
                    android:padding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />
            </LinearLayout>
            <TextView android:id="@+id/productBarcodeStatus2Text" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:text="Please scan the product barcode"
                android:textSize="14sp" android:textColor="#FF0000" android:layout_marginBottom="16dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/continueConfirmProductBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_btn"
        android:text="Continue"
        android:layout_gravity="center"/>
</LinearLayout>
